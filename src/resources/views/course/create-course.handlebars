<div class="add-course mt-4">
    <div class="container">
        <form method="POST" action="/">
            <div class="form-group">
                <label for="nameCourse">Tên Khóa Học:</label>
                <input type="text" name="name" class="form-control" id="nameCourse" aria-describedby="emailHelp" placeholder="Enter name course">       
            </div>
            <div class="form-group">
                <label for="desCourse">Miêu tả:</label>
                <input type="text" name="des" class="form-control" id="desCourse" aria-describedby="emailHelp" placeholder="Enter description course">           
            </div>
            <div class="form-group">
                <label for="videoId">Video ID:</label>
                <input type="text" name="videoId" class="form-control" id="videoId" aria-describedby="emailHelp" placeholder="Enter video id course">           
            </div>       
            <button type="submit" class="btn btn-primary">Submit</button>
        </form>
    </div>
</div>